@model Web.Models.UserModel
@{
    ViewBag.Title = "修改用户信息";
}

@using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { id = "Edit", data_val = true }))
{
    @Html.AntiForgeryToken()
    <div class="box box-solid">
        <div class="box-body">
            @Html.TextBoxFor(m => m.ID, new { @class = "form-control readonly" })
            <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })@RequiredTag()
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control " })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })@RequiredTag()
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control " })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
            </div>
        </div>

        <div class="box-footer">
            <button id="submitChange" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> 保存</button>
            <button type="button" id="btnDelete" class="btn btn-danger"><i class="fa fa-remove"></i> 删除</button>
            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-undo"></i> 返回</a>
        </div>
    </div>
}
@helper RequiredTag()
{
    @Html.Partial("_RequiredTagPartial")
}



@section scripts{


    <script type="text/javascript">

        $("#btnDelete").click(function (e) {

            alertify.klConfirm("是否确认删除", function () {
                location.href = '@Html.Raw(Url.Action("Delete", new { id = Model.ID }))';
            });
        });

        $(function () {


        });
    </script>
}





