@model Web.Models.GoodsDataModel
@{
    ViewBag.Title = "修改货物信息";
}

@using (Html.BeginForm("Edit", "GoodsData", FormMethod.Post, new { id = "Edit", data_val = true }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    <div class="box box-solid">
        <div class="box-body">

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.GoodsName, new { @class = "control-label" })@RequiredTag()
                        @Html.TextBoxFor(m => m.GoodsName, new { @class = "form-control " })
                        @Html.ValidationMessageFor(m => m.GoodsName)
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Unit, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Unit, new { @class = "form-control " })

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Brand, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Brand, new { @class = "form-control " })

                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.GoodType, new { @class = "control-label" })@RequiredTag()
                        @Html.DropDownListFor(m => m.GoodType, Model.GoodTypeList, T("未选择").Text.ToString(), new { @class = "form-control full-width " })
                        @*@Html.TextBoxFor(m => m.GoodType, new { @class = "form-control " })*@
                        @Html.ValidationMessageFor(m => m.GoodType)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Inventory, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Inventory, new { @class = "kl-input-num  full-width" })

                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Warehouse, new { @class = "control-label" })@RequiredTag()
                        @Html.DropDownListFor(m => m.Warehouse, Model.WarehouseList, T("未选择").Text.ToString(), new { @class = "form-control full-width " })
                        @*@Html.TextBoxFor(m => m.Warehouse, new { @class = "form-control " })*@
                        @Html.ValidationMessageFor(m => m.Warehouse)
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DefaultPurchasePrice, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.DefaultPurchasePrice, new { @class = "kl-input-num  full-width " })
                        @Html.ValidationMessageFor(m => m.DefaultPurchasePrice)
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ActualPurchasePrice, new { @class = "control-label" })@RequiredTag()
                        @Html.TextBoxFor(m => m.ActualPurchasePrice, new { @class = "kl-input-num  full-width " })

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Cost, new { @class = "control-label" })@RequiredTag()
                        @Html.TextBoxFor(m => m.Cost, new { @class = "kl-input-num  full-width " })
                        @Html.ValidationMessageFor(m => m.Cost)
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.SingleProfit, new { @class = "control-label" })@RequiredTag()
                        @Html.TextBoxFor(m => m.SingleProfit, new { @class = "kl-input-num  full-width " })
                        @Html.ValidationMessageFor(m => m.SingleProfit)
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price1, new { @class = "control-label aaa" })
                        @Html.TextBoxFor(m => m.Price1, new { @class = "kl-input-num  full-width " })

                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price2, new { @class = "control-label aaa" })
                        @Html.TextBoxFor(m => m.Price2, new { @class = "kl-input-num  full-width " })

                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price3, new { @class = "control-label aaa" })
                        @Html.TextBoxFor(m => m.Price3, new { @class = "kl-input-num  full-width " })

                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price4, new { @class = "control-label aaa" })
                        @Html.TextBoxFor(m => m.Price4, new { @class = "kl-input-num  full-width " })

                    </div>
                </div>
            </div>
        </div>

        <div class="box-footer">
            <button id="submitChange" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> 保存</button>
            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-undo"></i> 返回</a>
        </div>
    </div>
}
@helper RequiredTag()
{
    @Html.Partial("_RequiredTagPartial")
}



@section scripts{


    @Html.Partial("_KendoDropdownListPartial")
    @Html.Partial("_KendoDatePickerPartial")
    @Html.Partial("_ModalSelectorPartial")
    @Html.Partial("_KendoNumericTextBoxPartial")
    <script type="text/javascript">

        $("#Inventory").kendoNumericTextBox({
            decimals: 0,
            format: "0",
            min: 0,
            max: 50000
        });

        $("#DefaultPurchasePrice").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#ActualPurchasePrice").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#Cost").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#SingleProfit").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#Price1").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#Price2").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#Price3").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $("#Price4").kendoNumericTextBox({
            format: "c",
            decimals: 2,
            min: 0
        });

        $(function () {

        });
    </script>
}





