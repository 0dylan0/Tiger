@model Web.Models.InventoryDataListModel


@{
    ViewBag.Title = "商品库存列表";
}

<div class="box box-solid">
    <div class="box-header">
        @using (Html.BeginForm("Index", "InventoryData", FormMethod.Post, new { Id = "InventoryDataForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12 ">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control full-width", placeholder = "可按中文名查询" })
                    </div>
                </div>

                <div class="col-md-1 col-sm-2 col-xs-12">
                    <div class="form-group">
                        @HiddenLabel()
                        <button type="submit" class="btn btn-default" id="SubmitRivalDatumForm"><i class="fa fa-search"></i> 查询</button>
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="box-body">
        <div class="mailbox-controls no-padding">
            <div class="pull-right">
                <a href="@Url.Action("Add","PurchaseData")" class="btn btn-primary"><i class="fa fa-plus"></i> 采购进货</a>
            </div>
        </div>
        <table class="table table-condensed table-striped table-hover dataTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>商品编号</th>
                    <th>商品名称</th>

                    <th>进货日期</th>@*采购进货日期*@
                    <th>出货日期</th>@*销售出货日期*@

                    <th>类别</th>
                    <th>单位</th>
                    <th>成本价</th>

                    <th>存库数量</th>                
                    <th>存库金额</th>

                    <th>仓库编号</th>
                    <th>仓库名称</th>

                    
                    <th>供应商编号</th>
                    <th>供应商名称</th>
                    <th>供应商地址</th>

                    <th>详情</th>
                    <th>编辑</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts{
    @Html.Partial("_KendoDropdownListPartial")
    @Html.Partial("_ModalSelectorPartial")
    <script type="text/javascript">

        $(function () {
            var grid = $(".dataTable").DataTable({
                order: [1, "desc"],
                ajax: {
                    url: "@Url.Action("Index")",
                    type: "post",
                    data: function (d) {
                        d.textquery = $("#Name").val(),
                        addAntiForgeryToken(d);
                    },
                },
                columns: [
					{ data: "id" },
                    { data: "goodsID" },
                    { data: "goodsName" },

                    { data: "purchaseDate" },
                    { data: "shipmentsDate" },
                    { data: "goodsType" },
                    { data: "unit" },
                    { data: "costPrice" },              

                    { data: "inventoryQuantity" },
                    { data: "inventorySum" },

                    { data: "warehouseID" },
                    { data: "warehouseName" },

                    { data: "supplierID" },
                    { data: "supplierName" },
                    { data: "supplierAddress" },
                    {
                        orderable: false,

                    },
                    {
                        orderable: false,

                    }],
                columnDefs: [
                    {
                        targets: [3],
                        render: function (data, type, full) {
                            return FormatDate(data, "yyyy-MM-dd");
                        }

                    },
                    {
                        targets: [4],
                        render: function (data, type, full) {
                            return FormatDate(data, "yyyy-MM-dd");
                        }

                    },
                    {
                        targets: [15],
                        orderable: false,
                        render: function (data, type, full) {
                            return '<a href="/ClientData/Edit?id=' + encodeURIComponent(full["id"]) + '" class="btn btn-xs btn-default "><span class="fa fa-pencil"></span> 详情</a>';
                        }
                    },
                    {
                        targets: [16],
                        orderable: false,
                        render: function (data, type, full) {
                            return '<a href="/SalesShipmentsData/Add' + '" class="btn btn-xs btn-default "><span class="fa fa-pencil"></span> 出货</a>';
                        }
                    }
                ],

                language: {
                    zeroRecords: "DataTables.zeroRecords"
                },
            });
            $("#SubmitRivalDatumForm").click(function (e) {
                grid.page("first").draw();
                return false;
            });

        });
    </script>
}

